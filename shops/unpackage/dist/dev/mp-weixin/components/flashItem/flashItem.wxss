.flashItem .list .item {
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  height: 227rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flashItem .list .item .pictrue {
    width: 166rpx;
    height: 166rpx;
}
.flashItem .list .item .pictrue image {
      width: 100%;
      height: 100%;
      border-radius: 6rpx;
      border: 0;
}
.flashItem .list .item .text {
    width: 500rpx;
    font-size: 30rpx;
    color: #333;
    height: 166rpx;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column;
            flex-flow: column;
    -webkit-justify-content: space-around;
            justify-content: space-around;
}
.flashItem .list .item .text .progress {
      overflow: hidden;
      background-color: #fff;
      width: 260rpx;
      border-radius: 20rpx;
      height: 34rpx;
      position: relative;
}
.flashItem .list .item .text .progress .bg-red {
        width: 0;
        height: 100%;
        -webkit-transition: width .6s ease;
        transition: width .6s ease;
        background-color: #ffe3e1;
}
.flashItem .list .item .text .progress .piece {
        position: absolute;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
        top: 49%;
        font-size: 22rpx;
}
.flashItem .list .item .money {
    font-size: 24rpx;
    color: #282828;
    margin-top: -13rpx;
}
.flashItem .list .item .money .num {
      font-size: 34rpx;
      font-weight: 700;
}
.flashItem .list .item .grab {
    font-size: 28rpx;
    color: #fff;
    width: 140rpx;
    height: 54rpx;
    border-radius: 4rpx;
    text-align: center;
    line-height: 54rpx;
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
}
.acea-row.row-between-wrapper {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.acea-row.row-between-wrapper,
.acea-row.row-center-wrapper {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.acea-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.line1 {
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.line1,
.line2 {
  overflow: hidden;
}
