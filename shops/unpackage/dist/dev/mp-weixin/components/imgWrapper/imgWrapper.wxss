.wrapper {
  background-color: #fff;
  box-sizing: border-box;
  outline: 0;
}
.wrapper .title {
  border-top: 1rpx solid #eee;
  padding-top: 34rpx;
  margin: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  outline: 0;
}
.wrapper .title .text {
  font-size: 24rpx;
  color: #999;
  width: 530rpx;
  text-align: left;
}
.wrapper .title .text .name {
  color: #282828;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 5rpx;
  position: relative;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
}
.line1 {
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.wrapper .title .more {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wrapper .scroll-product {
  white-space: nowrap;
  margin-top: 38rpx;
  padding: 0 3rpx 37rpx 3rpx;
  overflow: hidden;
}
.swiper-wrapper {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  z-index: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0rpx 20rpx;
}
.wrapper .scroll-product .swiper-slide {
  width: 180rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  margin-right: 19rpx;
  border-bottom: 4rpx solid #47b479;
  box-shadow: 0 15rpx 15rpx -1rpx #eee;
  height: 100%;
  position: relative;
}
.wrapper .scroll-product .swiper-slide .img-box {
  width: 100%;
  height: 180rpx;
}
.wrapper .scroll-product .swiper-slide .pro-info {
  font-size: 24rpx;
  color: #282828;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #f5f5f5;
  border-bottom: 0;
  border-top: 0;
  padding: 10rpx;
}
.wrapper .scroll-product .swiper-slide .img-box image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx 6rpx 0 0;
}
.wrapper .scroll-product .swiper-slide:nth-of-type(3n) {
  border-bottom: 4rpx solid #ff6960;
}
.wrapper .scroll-product .swiper-slide:nth-of-type(3n-1) {
  border-bottom: 4rpx solid #579afe;
}
.swiper-wrapper-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: auto;
}

