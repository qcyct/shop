
.coupon {
	padding: 0 26rpx;
	background-color: #f8f8f8;
}
.coupon-item {
	padding: 10rpx;
	background-color: #fff;
	position: relative;
}
.coupon-i-l {
	width: 400rpx;
	display: inline-block;
}
.coupon-i-l-t {
	font-size: 32rpx;
	position: relative;
	margin-bottom: 10rpx;
}
.coupon-i-l-t .icon {
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.coupon-i-l-t text {
	margin-left: 60rpx;
}
.coupon-i-l-b {
	font-size: 24rpx;
	color: #999;
}
.coupon-i-r {
	width: 258rpx;
	display: inline-block;
	text-align: center;
}
.coupon-logo {
	width: 130rpx;
	height: 100rpx;
}
.item image {
	width: 100%;
	height: 100%;
}
.item .text {
	position: absolute;
	top: 72rpx;
	left: 60rpx;
}
.name {
	font-size: 28rpx;
	color: #fff;
}
.infor {
	font-size: 30rpx;
	color: hsla(0, 0%, 100%, .8);
	margin-top: 10rpx;
}

